---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

const defaultTitle = "Twoslashes.dev - Thoughts, Essays, and Comments";
const defaultDescription =
  "A personal collection of musings, essays, and opinion piecesâ€”where every thought starts with a comment.";

const { title = defaultTitle, description = defaultDescription } = Astro.props;

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Title -->
    <title>{title}</title>

    <!-- HTML Meta Tags -->
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Twoslashes, essays, thoughts, personal blog, comments, writings, nodesleep, Aron Sweet"
    />
    <meta name="author" content="Aron Sweet" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://twoslashes.dev/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Twoslashes | Aron Sweet" />
    <meta
      property="og:description"
      content="A personal collection of articles, essays, and opinion pieces."
    />
    <meta property="og:image" content="https://twoslashes.dev/og-image.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="twoslashes.dev" />
    <meta property="twitter:url" content="https://twoslashes.dev/" />
    <meta name="twitter:title" content="Twoslashes | Aron Sweet" />
    <meta
      name="twitter:description"
      content="A personal collection of articles, essays, and opinion pieces."
    />
    <meta name="twitter:image" content="https://twoslashes.dev/og-image.png" />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Q4KE3S6R9L"
    ></script>
    <script>
      // @ts-nocheck
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-Q4KE3S6R9L");
    </script>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
